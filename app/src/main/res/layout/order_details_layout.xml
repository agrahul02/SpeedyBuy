<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/product_image_order_details"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_icon" />

    <TextView
        android:id="@+id/product_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="product name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_price_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rs.299/-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/product_image_order_details"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/product_quantity_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_background"
        android:backgroundTint="@color/black"
        android:padding="3dp"
        android:text="Qty 1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/product_image_order_details"
        app:layout_constraintEnd_toStartOf="@+id/product_image_order_details" />

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image_order_details" />

    <ImageView
        android:id="@+id/oredred_indicator_order_details"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider9"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/recyclerViewBackground" />

    <ProgressBar
        android:id="@+id/orderd_packed_progressbar_order_details"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:progressBackgroundTint="@color/recyclerViewBackground"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/oredred_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/oredred_indicator_order_details" />

    <ImageView
        android:id="@+id/packed_indicator_order_details"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oredred_indicator_order_details"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/recyclerViewBackground" />

    <ProgressBar
        android:id="@+id/packed_shipped_progressbar_order_details"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:progressBackgroundTint="@color/recyclerViewBackground"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/packed_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/packed_indicator_order_details" />

    <ImageView
        android:id="@+id/shipping_indicator_order_details"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/packed_indicator_order_details"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/recyclerViewBackground" />

    <ProgressBar
        android:id="@+id/shipped_delivered_progressbar_order_details"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:progressBackgroundTint="@color/recyclerViewBackground"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/shipping_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/shipping_indicator_order_details" />

    <ImageView
        android:id="@+id/deliverd_indicator__order_details"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shipping_indicator_order_details"
        app:srcCompat="@drawable/selected_dot"
        app:tint="@color/recyclerViewBackground" />

    <TextView
        android:id="@+id/ordered_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ordered"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/oredred_indicator_order_details"
        app:layout_constraintStart_toEndOf="@+id/oredred_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/oredred_indicator_order_details" />

    <TextView
        android:id="@+id/ordered_date_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2023 - 7:00 A.M."
        app:layout_constraintBottom_toBottomOf="@+id/orderd_packed_progressbar_order_details"
        app:layout_constraintStart_toEndOf="@+id/orderd_packed_progressbar_order_details"
        app:layout_constraintTop_toTopOf="@+id/orderd_packed_progressbar_order_details" />

    <TextView
        android:id="@+id/ordered_body_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has been placed."
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/ordered_title_order_details"
        app:layout_constraintTop_toBottomOf="@+id/orderd_packed_progressbar_order_details" />

    <TextView
        android:id="@+id/packed_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="packed"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/packed_indicator_order_details"
        app:layout_constraintStart_toEndOf="@+id/packed_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/packed_indicator_order_details" />

    <TextView
        android:id="@+id/packed_date_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Your order has been placed."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/packed_title_order_details"
        app:layout_constraintStart_toEndOf="@+id/packed_title_order_details"
        app:layout_constraintTop_toTopOf="@+id/packed_title_order_details" />

    <TextView
        android:id="@+id/packed_body_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has been packed"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/packed_title_order_details"
        app:layout_constraintTop_toBottomOf="@+id/packed_title_order_details" />

    <TextView
        android:id="@+id/shipping_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shipping"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_indicator_order_details"
        app:layout_constraintStart_toEndOf="@+id/shipping_indicator_order_details"
        app:layout_constraintTop_toTopOf="@+id/shipping_indicator_order_details" />

    <TextView
        android:id="@+id/shipping_date_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Your order has been placed."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_title_order_details"
        app:layout_constraintStart_toEndOf="@+id/shipping_title_order_details"
        app:layout_constraintTop_toTopOf="@+id/shipping_title_order_details" />

    <TextView
        android:id="@+id/shipping_body_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="your order has been shipped"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/shipping_title_order_details"
        app:layout_constraintTop_toBottomOf="@+id/shipping_title_order_details" />

    <TextView
        android:id="@+id/deliverd_title_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delivered"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/deliverd_indicator__order_details"
        app:layout_constraintStart_toEndOf="@+id/deliverd_indicator__order_details"
        app:layout_constraintTop_toTopOf="@+id/deliverd_indicator__order_details" />

    <TextView
        android:id="@+id/deliverd_date_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Your order has been placed."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/deliverd_title_order_details"
        app:layout_constraintStart_toEndOf="@+id/deliverd_title_order_details"
        app:layout_constraintTop_toTopOf="@+id/deliverd_title_order_details" />

    <TextView
        android:id="@+id/deliverd_body_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="your order has been delivered"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/deliverd_title_order_details"
        app:layout_constraintTop_toBottomOf="@+id/deliverd_title_order_details" />

    <LinearLayout
        android:id="@+id/rate_now_container_order_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/star"
            app:tint="@color/wGray" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/star"
            app:tint="@color/wGray" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/star"
            app:tint="@color/wGray" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/star"
            app:tint="@color/wGray" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/star"
            app:tint="@color/wGray" />

    </LinearLayout>

    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliverd_body_order_details" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="your rating"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider10" />

    <Button
        android:id="@+id/cancel_btn_order_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/teal_200"
        android:stateListAnimator="@null"
        android:text="Cancel order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_now_container_order_details" />
</androidx.constraintlayout.widget.ConstraintLayout>